<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
      }
      .topnav {
        overflow: hidden;
        background-color: #333;
      }
      .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
      }
      .topnav a:hover {
        background-color: #ddd;
        color: black;
      }
      .topnav a.active {
        background-color: #04AA6D;
        color: white;
      }
      .topnav-right {
        float: right;
      }
      .footer {
        position: relative;
        left: 0;
        padding: 40px;
        bottom: 0px;

        background-color: red;
        color: white;
        text-align: center;
      }
      #devices {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      #devices td, #devices th {
        border: 1px solid #ddd;
        padding: 8px;
      }

      #devices tr:nth-child(even){background-color: #f2f2f2;}

      #devices tr:hover {background-color: #ddd;}

      #devices th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #04AA6D;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="/">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <%if(data.username){ %>
        <div class="topnav-right">
          <a href="/console/">Console</a>
          <a href="/account/"><%=data.username %></a>
          <%if(data1){%>
            <a href="/group"><%=data1.groupName%></a>
          <%}%>
          <%if(!data1){%>
            <a href="/group">+ Group</a>
          <%}%>
        </div>
      <%}%>
    </div>
    <div class="home">
      <%if(data1){%>
        <h1><%=data1.groupName%></h1>
        <h1><%=data1.groupID%></h1>
        <h1>Creator:</h1>
        <h1><%=data1.groupCreator.userName%> <%=data1.groupCreator.userID%></h1>
        <table id="devices">
          <tr>
            <td>Member ID</td>
            <td>Member Name</td>
            <td>Member Role</td>
          </tr>
          <%for(var i=0;i<data1.members.length;i++){%>
            <tr>
              <td><%=data1.members[i].memberID%></td>
              <td><%=data1.members[i].memberName%></td>
              <td><%=data1.members[i].memberRole%></td>
            </tr>
          <%}%>
        </table>
        <form action="/group/invite" method="post">
          <input type="text" name="memberID" placeholder="Invite">
          <input type="text" name="memberRole" placeholder="Role">
          <input type="submit" value="Send">
        </form>
      <%}%>
      <%if(!data1){%>
        <form action="/group" method="post">
          <input type="text" name="name" placeholder="Create Group">
          <input type="submit" value="Send">
        </form>
      <%}%>
    </div>
    <div class="footer">
      <h1>ciao</h1>
    </div>
  </body>
</html>
